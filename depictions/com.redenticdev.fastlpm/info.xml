<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE xml>
<packageInfo>
    <name>FastLPM</name>
    <descriptions>
        <description>
            Toggle LPM by tapping the battery icon
        </description>
        <description>
            This tweak allows you to simply tap on the status bar battery to toggle Low Power Mode.
        </description>
        <description>
            Features:
            - Easy-to-use
            - Full rewrite &amp; replacement of QuickPowerMode
            - Ability to trigger a vibration on toggle
            - Choose between 6 total vibrations depending on your device
        </description>
    </descriptions>
    <compatibility>
        <miniOS>11.0</miniOS>
        <maxiOS>13.7</maxiOS>
    </compatibility>
    <dependencies>
        <dependency>mobilesubstrate or com.ex.substitute</dependency>
        <dependency>preferenceloader</dependency>
        <dependency>Cephei Tweak Support</dependency>
    </dependencies>
