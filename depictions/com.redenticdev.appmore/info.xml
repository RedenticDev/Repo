<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE xml>
<packageInfo>
    <name>AppMore</name>
    <descriptions>
        <description>
            Auto-extend app's description in AppStore updates page
        </description>
        <description>
            The tweak auto-expands the description of apps in the update page of the AppStore on iOS 13. It works for both updated apps and outdated ones, and has been made after a Reddit request.
        </description>
        <description>
            No options to configure.
        </description>
    </descriptions>
    <compatibility>
        <miniOS>13.0</miniOS>
        <maxiOS>13.7</maxiOS>
    </compatibility>
    <dependencies>
        <dependency>mobilesubstrate or com.ex.substitute</dependency>
    </dependencies>
    <changelog>
